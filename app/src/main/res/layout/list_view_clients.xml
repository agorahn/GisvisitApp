<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/user2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="vertical"
        android:layout_marginRight="110dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/main_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Erick Hernandez"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/main_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Barrio independencia frente iglesia"
            android:textSize="14sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/main_info"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:scaleType="centerCrop"

        android:foreground="@drawable/info" />

    <ImageView
        android:id="@+id/main_call"
        android:layout_width="45dp"
        android:layout_height="45dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:scaleType="centerCrop"

        android:foreground="@drawable/call" />


    <!--

    <TextView
        android:id="@+id/main_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rating"/>

    <TextView
        android:id="@+id/main_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year"/>

        -->

</RelativeLayout>