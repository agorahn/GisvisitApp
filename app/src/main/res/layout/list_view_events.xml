<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:foreground="@drawable/event" />

    <LinearLayout
        android:id="@+id/image_icon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical"
        android:paddingLeft="50dp">

        <TextView
            android:id="@+id/tipo_evento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Erick Hernandez"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nombre_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Barrio independencia frente iglesia" />


    </LinearLayout>

    <ImageView
        android:id="@+id/main_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:foreground="@drawable/info"
        android:gravity="left"
        android:scaleType="centerCrop" />


        <!--

        <TextView
            android:id="@+id/main_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"/>

        <TextView
            android:id="@+id/main_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"/>

            -->


</RelativeLayout>